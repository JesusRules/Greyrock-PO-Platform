{
    "compilerOptions": {
      "baseUrl": ".",
      "paths": {
        "@types/*": ["types/*"]
      },
      "strict": true,
      "target": "ES2020",
      "module": "commonjs",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "outDir": "./dist",
      "forceConsistentCasingInFileNames": true
    },
    "include": ["server", "client", "types"]
  }
  