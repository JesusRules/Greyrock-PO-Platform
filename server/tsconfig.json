{
    "extends": "../tsconfig.json",
    "compilerOptions": {
      "jsx": "react",
      "target": "es2020",
      // "module": "ESNext",
      "module": "commonjs",
      "rootDir": "../",                // compile from root
      "outDir": "./dist",      // or ./dist if you prefer
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": [
      "../server/**/*",                   // relative to rootDir
      "../types/**/*"
    ],
    "exclude": ["dist", "node_modules", "../client"]
    // "exclude": ["dist", "node_modules", "client"]
  }
  
  