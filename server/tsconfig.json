{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"jsx": "react",
		"target": "es2020",
		"module": "NodeNext",
		"rootDir": "../",
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "nodenext"
	},
	"include": ["../server/**/*", "../types/**/*"],
	"exclude": ["dist", "node_modules", "../client"]
}